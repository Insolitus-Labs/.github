{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/globals.css",
    "baseColor": "neutral",
    "cssVariables": true,
    "prefix": ""
  },
  "aliases": {
    "components": "@/components",
    "utils": "@/lib/utils",
    "ui": "@/components/ui",
    "lib": "@/lib",
    "hooks": "@/hooks"
  },
  "iconLibrary": "lucide",
  "fonts": {
    "body": "Inter, sans-serif",
    "heading": "Poppins, sans-serif"
  },
  "components": {
    "button": {
      "default": "bg-primary text-white py-2 px-4 rounded",
      "hover": "hover:bg-secondary",
      "focus": "focus:ring-4 focus:ring-secondary"
    },
    "card": {
      "default": "bg-white shadow-lg rounded-lg p-6",
      "hover": "hover:shadow-2xl transition-shadow"
    }
  },
  "spacing": {
    "sm": "0.5rem",
    "md": "1rem",
    "lg": "2rem",
    "xl": "4rem"
  },
  "animations": {
    "bounce": "bounce 1s ease-in-out infinite",
    "fadeIn": "fadeIn 2s ease-in-out"
  },
  "boxShadow": {
    "default": "0 4px 6px rgba(0, 0, 0, 0.1)",
    "lg": "0 15px 30px rgba(0, 0, 0, 0.15)"
  }
}
